<h3 class="ui header">{{t "forms.i-i-s-kyrs18-покупатель-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kyrs18-покупатель-e.датРожд-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датРожд
      class=(if (v-get validationModel "датРожд" "isInvalid") "error")
      data-test-i-i-s-kyrs18-покупатель-e-датРожд=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датРожд" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.фИО-caption")
      data-test-i-i-s-kyrs18-покупатель-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.iD-caption")
      data-test-i-i-s-kyrs18-покупатель-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерПаспорта
      class=(if (v-get validationModel "номерПаспорта" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.номерПаспорта-caption")
      data-test-i-i-s-kyrs18-покупатель-e-номерПаспорта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерПаспорта" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.элПочта
      class=(if (v-get validationModel "элПочта" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.элПочта-caption")
      data-test-i-i-s-kyrs18-покупатель-e-элПочта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "элПочта" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.банкСчет
      class=(if (v-get validationModel "банкСчет" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.банкСчет-caption")
      data-test-i-i-s-kyrs18-покупатель-e-банкСчет=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "банкСчет" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.серияПаспорта
      class=(if (v-get validationModel "серияПаспорта" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-покупатель-e.серияПаспорта-caption")
      data-test-i-i-s-kyrs18-покупатель-e-серияПаспорта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "серияПаспорта" "message")}}
  </div>
</form>
