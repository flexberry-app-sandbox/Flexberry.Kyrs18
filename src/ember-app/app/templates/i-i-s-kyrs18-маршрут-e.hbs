<h3 class="ui header">{{t "forms.i-i-s-kyrs18-маршрут-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерМаршрута
      class=(if (v-get validationModel "номерМаршрута" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-маршрут-e.номерМаршрута-caption")
      data-test-i-i-s-kyrs18-маршрут-e-номерМаршрута=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерМаршрута" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.конечПункт
      class=(if (v-get validationModel "конечПункт" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-маршрут-e.конечПункт-caption")
      data-test-i-i-s-kyrs18-маршрут-e-конечПункт=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "конечПункт" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяОтправ
      class=(if (v-get validationModel "времяОтправ" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-маршрут-e.времяОтправ-caption")
      data-test-i-i-s-kyrs18-маршрут-e-времяОтправ=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяОтправ" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.времяПрибыт
      class=(if (v-get validationModel "времяПрибыт" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-маршрут-e.времяПрибыт-caption")
      data-test-i-i-s-kyrs18-маршрут-e-времяПрибыт=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "времяПрибыт" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимость
      class=(if (v-get validationModel "стоимость" "isInvalid") "error")
      label=(t "forms.i-i-s-kyrs18-маршрут-e.стоимость-caption")
      data-test-i-i-s-kyrs18-маршрут-e-стоимость=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимость" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kyrs18-маршрут-e.перевозчик-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.перевозчик
      displayAttributeName="наименование"
      autocomplete=true
      relationName="перевозчик"
      projection="ПеревозчикL"
      title=(t "forms.i-i-s-kyrs18-маршрут-e.перевозчик-caption")
      readonly=readonly
      componentName="перевозчикLookup"
      class=(if (v-get validationModel "перевозчик" "isInvalid") "error")
      data-test-i-i-s-kyrs18-маршрут-e-перевозчик=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "перевозчик" "message")}}
  </div>
</form>
